<h4 class="fw-semibold text-center mb-4">Add Lot</h4>
<%= form_with(model: Lot.new,url: auction_lots_url(@auction), remote: true,
              method: :post, data: { turbo: false }) do |f| %>
  <div class="row g-3 my-4 text-dark">
    <%= render 'partials/error_messages', object: f.object %>

    <div class="col-sm-12">
      <%= f.label 'Title', class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="col-sm-12 mb-3">
      <%= f.label :description, class: 'form-label' %>
      <%= f.text_area :description, class: 'form-control', required: true %>
    </div>

    <div class="col-sm-12 row">
      <div class="col-sm-3">
        <%= f.label :quantity, class: 'form-label' %>
        <%= f.number_field :quantity, class: 'form-control', required: true %>
      </div>
      <div class="col-sm-5">
        <%= f.label 'Asking price ($)', class: 'form-label' %>
        <div class="input-group">
          <%= f.number_field :asking_price, class: 'form-control', required: true %>
          <span class="input-group-text">.00</span>
        </div>
      </div>
      <div class="col-sm-4">
        <%= f.label :condition, class: 'form-label' %>
        <%= f.select :condition, options_for_select(['good', 'bad']), class: 'form-select form-select' %>
      </div>
    </div>
    <div class="text-center">
      <%= f.submit "Create Lot", class: "col-sm-5 btn btn-primary btn-md" %>
    </div>

  </div>
<% end %>
