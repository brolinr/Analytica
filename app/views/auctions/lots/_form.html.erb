<div class="row mb-3">
  <div class="col-sm-6 col-lg-8 border border-primary">
    <%= form_with(url: , remote: true, method: :post, data: { turbo: false }) do |f| %>
      <div class="row g-3 mt-4 text-dark">
        <%= render 'partials/error_messages', object: f.object %>

        <div class="col-sm-12">
          <%= f.label 'Title', class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control', required: true %>
        </div>

        <div class="col-sm-12">
          <%= f.label :description, class: 'form-label' %>
          <%= f.text_area :description, class: 'form-control', required: true %>
        </div>

        <div class="col-sm-12">
          <%= f.label 'Additional notes', class: 'form-label' %>
          <%= f.text_area :notes, class: 'form-control' %>
        </div>

        <div class="col-sm-6 mb-2">
          <%= f.label "Auction start date", class: 'form-label' %>
          <%= f.datetime_field :start, class: 'form-control', required: true %>
        </div>

        <div class="col-sm-6">
          <%= f.label 'Auction deadline date', class: 'form-label' %>
          <%= f.datetime_field :deadline, class: 'form-control', required: true %>
        </div>

        <div class="col-sm-6">
          <%= f.label :location, class: 'form-label' %>
          <%= f.text_field :location, class: 'form-control', value: current_company.location, required: true %>
        </div>

        <div class="col-6 mb-2">
          <% if @auction.image.attached? %>
            <%= image_tag @auction.image %>
          <% end %>
          <%= f.label 'Add an image', class: 'form-label' %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>

        <div class="col-sm-3"></div>

        <%= f.submit "Create auction", class: "col-sm-5 btn btn-primary btn-md" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-6 col-lg-4 border border-warning">
  </div>
</div>