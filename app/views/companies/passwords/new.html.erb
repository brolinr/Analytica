
<% provide(:title, "Forgot password?") %>

<div class="container my-5">
  <%= render "companies/shared/error_messages", resource: resource %>
  <div class="row justify-content-center g-5 px-5">
    <div class="col-md-7 col-lg-8">
      <h4 class="fw-bold ">Forgot password?</h4>
      <small class="mb-5">
        Remembered your password?
        <%= link_to "Login", new_company_session_path, class: "text-primary text-decoration-none" %>
        to your account instead.
      </small>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: {turbo: false}) do |f| %>
        <div class="row g-3 my-4 text-dark">
          <div class="col-10 mb-2">
            <%= f.label :email_address, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control', placeholder: "you@example.com" %>
          </div>

          <div class="col-12">
            <%= f.submit "Send reset instructions", class: "btn btn-primary btn-md" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>