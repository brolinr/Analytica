<% provide(:title, "Forgot password?") %>

<div class="container">
  <div class="row justify-content-center g-5 px-5">
    <div class="col-md-7 col-lg-8">
      <h4 class="fw-bold ">Forgot password?</h4>
      <small class="mb-5">
        Are you new?
        <%= link_to "Create an account", new_company_registration_path, class: "text-primary text-decoration-none" %>
        for your business instead.
      </small>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row g-3 my-4 text-dark">
          <div class="col-10 mb-2">
            <%= f.label :email_address, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control', placeholder: "you@example.com" %>
          </div>

          <div class="col-12">
            <%= f.submit "Resend confirmation instructions", class: "btn btn-primary btn-md" %>
          </div>
        </div>
      <% end %>

      <span class="text-muted">Didn't recieve
        <%= link_to " confirmation ", new_company_session_path, class: "text-primary text-decoration-none" %>
        instructions?
      </span>

    </div>
  </div>
</div>