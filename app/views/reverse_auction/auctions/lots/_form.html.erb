<%  lot = data[:lot] %>
<% auction = data[:auction] %>

<%= form_with(model: lot, url: reverse_auction_auction_lots_path(auction), method: :post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="col-sm-12 mb-2">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="col-sm-12 row">
    <div class="col-sm-3">
      <%= f.label :quantity, class: 'form-label' %>
      <%= f.number_field :quantity, class: 'form-control', required: true %>
    </div>
    <div class="col-sm-5">
      <%= f.label 'Asking price ($)', class: 'form-label' %>
      <div class="input-group">
        <%= f.number_field :asking_price, class: 'form-control', required: true %>
        <span class="input-group-text">.00</span>
      </div>
    </div>
    <div class="col-sm-4">
      <%= f.label :condition, class: 'form-label' %>
      <%= select_tag :condition, options_for_select(%w[New Used Refurbished]), class: 'form-select', required: true %>
    </div>

    <div class="text-center mt-4 mb-3">
      <%= f.submit "Create Lot", class: "btn btn-info text-white" %>
    </div>
  </div>
<% end %>